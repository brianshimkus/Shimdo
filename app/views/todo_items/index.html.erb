<h1><%= @todo.title %></h1>

<table class="todo_items">
	<% @todo.todo_items.each do |todo_item| %>
	<tr id="<%= dom_id(todo_item) %>">
		<td><%= todo_item.content %></td>
		<td><%= link_to "Edit", edit_todo_todo_item_path(todo_item) %></td>
		<td><%= link_to "Delete", todo_todo_item_path(todo_item), method: :delete,
			data: { confirm: "Are you sure?"} %></td>
	</tr>
	<% end %>
</table>

<p>
	<%= link_to "New Todo Item", new_todo_todo_item_path %>
</p>