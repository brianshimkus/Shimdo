<h1>Listing todos</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @todos.each do |todo| %>
      <tr id="<%= dom_id(todo) %>">
        <td><%= todo.title %></td>
        <td><%= todo.description %></td>

        <td>
          <a href="">List Items</a>
          <%= link_to "List Items", todo_todo_items_path(todo) %>
          <%= link_to 'Show', todo %>
          <%= link_to 'Edit', edit_todo_path(todo) %>
          <%= link_to 'Destroy', todo, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Todo', new_todo_path %>
