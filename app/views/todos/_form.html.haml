= form_for(@todo) do |f|
  - if @todo.errors.any?
    #error_explanation
      %h2
        = pluralize(@todo.errors.count, "error")
        prohibited this todo from being saved:
      %ul
        - @todo.errors.full_messages.each do |msg|
          %li= msg
  .field
    %br/
    = f.label :title
    %br/
    = f.text_field :title
    %br/
    %br/
  .field
    = f.label :description
    %br/
    = f.text_area :description
    %br/
    %br/
  .actions
    = f.submit